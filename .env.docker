# Futures Analysis Docker Environment Configuration
# Copy this file to .env.docker and customize the values

# ============================================
# Basic Settings
# ============================================
TZ=Asia/Shanghai
CA_APP_ENVIRONMENT=production

# ============================================
# MySQL Configuration
# ============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=futures_analysis
MYSQL_USER=futures
MYSQL_PASSWORD=your_secure_password
MYSQL_PORT=13306

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_redis_password
REDIS_PORT=16379

# ============================================
# Application Ports
# ============================================
METRICS_PORT=9090

# ============================================
# Binance API (Optional - only needed for private endpoints)
# ============================================
CA_BINANCE_API_KEY=
CA_BINANCE_API_SECRET=

# ============================================
# Telegram Notification (Optional)
# ============================================
CA_NOTIFICATIONS_TELEGRAM_BOT_TOKEN=
CA_NOTIFICATIONS_TELEGRAM_CHAT_IDS=
